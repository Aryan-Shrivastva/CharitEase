<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Event</title>
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Poppins', sans-serif;
      background-image: url("/assets/Bg_photo.png");
    }
    .container {
      max-width: 800px;
      margin: 20px auto;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      color: #173B45;
      margin-bottom: 20px;
    }
    form label {
      font-weight: bold;
      margin-top: 10px;
      display: block;
    }
    form input, form textarea, form select {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 5px;
    }
    form input[type="submit"] {
      background-color: #173B45;
      color: white;
      border: none;
      cursor: pointer;
      padding: 12px 20px;
      border-radius: 5px;
      font-size: 1rem;
      margin-top: 20px;
    }
    form input[type="submit"]:hover {
      background-color: #173B45;
    }
    .features-section {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 20px;
    }
    .features-section input {
      width: calc(33% - 10px);
    }
    .add-feature-btn {
      background-color: #38a169;
      color: white;
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
    }
    .add-feature-btn:hover {
      background-color: #2f855a;
    }
    .hidden {
      display: none;
    }
    .dialog {
      visibility: hidden;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      width: 300px;
      padding: 20px;
      text-align: center;
      z-index: 1000;
      transition: visibility 0.3s, opacity 0.3s;
      opacity: 0;
    }
    
    .dialog.show {
      visibility: visible;
      opacity: 1;
    }
    
    .dialog p {
      margin: 0;
      font-size: 16px;
      color: #333;
    }
    
    .dialog.success {
      border-left: 5px solid #4CAF50; 
    }
    
    .dialog.error {
      border-left: 5px solid #f44336; 
    }
    
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="container">
    <h2>Add New Event</h2>
    <form id = "eventform"action="#" method="POST" onsubmit="updateHandler(event)">
      <!-- Community Name -->
      <label for="community_name">Community Name</label>
      <select id="community_name" name="community_name">
        <option value="Chetna">Chetna</option>
        <option value="Savera">Savera</option>
        <option value="CRY">CRY</option>
      </select>

      <!-- Event Name -->
      <label for="event_name">Event Name</label>
      <input type="text" id="event_name" name="event_name" >

      <!-- Theme -->
      <label for="theme">Theme</label>
      <input type="text" id="theme" name="theme" >

      <!-- Images -->
      <label for="image">Event Image URL</label>
      <input type="file" id="image" name="image" >
      <label for="bg_image">Background Image URL</label>
      <input type="file" id="bg_image" name="bg_image">

      <!-- Eligibility -->
      <label for="eligibility">Eligibility</label>
      <input type="text" id="eligibility" name="eligibility" >

      <!-- Number of Volunteers -->
      <label for="no_of_volunteers_">Number of Volunteers </label>
      <input type="number" id="no_of_volunteers_" name="no_of_volunteers_" >

      <label for="no_of_volunteers_registered">Number of Volunteers Registered</label>
      <input type="number" id="no_of_volunteers_registered" name="no_of_volunteers_registered">

      <!-- Date and Time -->
      <label for="date">Date</label>
      <input type="date" id="date" name="date" >

      <label for="time">Time</label>
      <input type="time" id="time" name="time">

      <!-- Place -->
      <label for="place">Place</label>
      <input type="text" id="place" name="place" >

      <!-- About -->
      <label for="about">About</label>
      <textarea id="about" name="about" rows="4" ></textarea>

      <!-- Features -->
      <label>Features</label>
      <div class="features-section" id="features-container">
        <input type="text" name="features_title[]" placeholder="Feature Title" >
        <input type="text" name="features_img[]" placeholder="Feature Image URL" >
        <input type="text" name="features[]" placeholder="Feature Description" >
      </div>
      
      <button type="button" class="add-feature-btn" id="add-feature-btn">+ Add More Features</button>

      <!-- Perks -->
      <label for="perks">Perks (comma-separated)</label>
      <input type="text" id="perks" name="perks" placeholder="Certificates, Snacks, Free-Wifi">

      <!-- Submit -->
      <input type="submit" value="Update Event Details">
    </form>
  </div>
  <div id="customDialog" class="dialog hidden">
    <p id="dialogMessage"></p>
  </div>
  
  

  <script src="/js/ngosidescript.js"></script>


</body>
</html>
